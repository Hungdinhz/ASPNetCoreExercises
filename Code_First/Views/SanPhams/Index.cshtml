@model IEnumerable<Code_First.Models.SanPham>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold mb-0">
            <i class="bi bi-box-seam"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm Sản Phẩm Mới
        </a>
    </div>

    <div class="table-responsive shadow-lg rounded-3">
        <table class="table table-bordered table-striped table-hover align-middle mb-0">
            <thead class="table-primary text-center align-middle">
                <tr>
                    <th>Mã SP</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Hình Ảnh</th>
                    <th>Số Lượng</th>
                    <th>Đơn Giá (VNĐ)</th>
                    <th>Trạng Thái</th>
                    <th>Loại Sản Phẩm</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-semibold">@item.MaSanPham</td>
                            <td>@item.TenSanPham</td>

                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.HinhAnh))
                                {
                                    <img src="~/images/@item.HinhAnh"
                                         alt="@item.TenSanPham"
                                         width="80"
                                         height="80"
                                         class="rounded shadow-sm border" />
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Chưa có ảnh</span>
                                }
                            </td>

                            <td class="text-center">@item.SoLuong</td>
                            <td class="text-end text-nowrap">@string.Format("{0:N0} đ", item.DonGia)</td>

                            <td class="text-center">
                                @switch (item.TrangThai)
                                {
                                    case 1:
                                        <span class="badge bg-success">Còn hàng</span>
                                        ;
                                        break;
                                    case 0:
                                        <span class="badge bg-danger">Hết hàng</span>
                                        ;
                                        break;
                                    case 2:
                                        <span class="badge bg-warning text-dark">Tạm ngưng</span>
                                        ;
                                        break;
                                    default:
                                        <span class="badge bg-secondary">Không rõ</span>
                                        ;
                                        break;
                                }
                            </td>

                            <td class="text-center">
                                @(item.LoaiSanPham?.TenLoai ?? "Không rõ")
                            </td>

                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash3-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-3">
                            <i class="bi bi-exclamation-circle"></i> Không có sản phẩm nào được tìm thấy.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
