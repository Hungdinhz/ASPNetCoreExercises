@model pdh_Day14_Lab4.Models.Learner

@{
    ViewData["Title"] = "Create Learner";
}

<h2 class="mt-4 mb-3 fw-bold text-primary">Create Learner</h2>

<div class="card shadow-sm p-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Last Name -->
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label fw-semibold"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- FirstMidName -->
                <div class="mb-3">
                    <label asp-for="FirstMidName" class="form-label fw-semibold"></label>
                    <input asp-for="FirstMidName" class="form-control" placeholder="Enter first/middle name" />
                    <span asp-validation-for="FirstMidName" class="text-danger"></span>
                </div>

                <!-- Enrollment Date -->
                <div class="mb-3">
                    <label asp-for="EnrollmentDate" class="form-label fw-semibold"></label>
                    <input asp-for="EnrollmentDate" type="date" class="form-control" />
                    <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                </div>

                <!-- Major -->
                <div class="mb-3">
                    <label asp-for="MajorID" class="form-label fw-semibold"></label>
                    <select asp-for="MajorID" asp-items="ViewBag.MajorID" class="form-select"></select>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                    Create
                </button>
            </form>

        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
