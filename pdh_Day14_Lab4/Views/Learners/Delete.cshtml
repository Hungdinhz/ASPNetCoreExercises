@model pdh_Day14_Lab4.Models.Learner

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Xác nhận xóa học viên</h3>
        </div>

        <div class="card-body">
            <p class="text-muted">Bạn có chắc chắn muốn xóa học viên này không?</p>

            <table class="table table-bordered">
                <tr>
                    <th>Họ</th>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <th>Tên đệm & tên</th>
                    <td>@Model.FirstMidName</td>
                </tr>
                <tr>
                    <th>Ngày nhập học</th>
                    <td>@Model.EnrollmentDate.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Ngành học</th>
                    <td>@Model.Major?.MajorName</td>
                </tr>
            </table>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="LearnerID" />

                <button type="submit" class="btn btn-danger px-4">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
            </form>
        </div>
    </div>
</div>
