@{
    ViewData["Title"] = "Index";
    
}
@model IEnumerable<Learner>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="ms-2 mx-2">
    <h1>Learner list</h1>
    @await Component.InvokeAsync("Major")
    <div id="content">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>MÃ</th>
                    <th>Tên</th>
                    <th>Họ</th>
                    <th>Ngày Nhập Học</th>
                    <th>Chức Năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.LearnerID</td>
                        <td>@s.FirstMidName</td>
                        <td>@s.LastName</td>
                        <td>@(s.Major?.MajorName ?? "N/A")</td>
                        <td>@s.EnrollmentDate</td>
                        <td><a asp-action="Edit" asp-route-id="@s.LearnerID">Edit</a>|<a asp-action="Delete" asp-route-id="@s.LearnerID">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-action="Create" class="btn btn-primary">Create New Student</a>
</div>

@section Scripts {
    <script>
        $("li").click(function () {
            var majorId = $(this).attr("id");
            $.ajax({
                url: '@Url.Action("LearnerByMajorId", "Learners")',
                type: 'GET',
                data: { majorId: majorId },
                success: function (result) {
                    $('#content').html(result);
                },
                error: function (xhr, status, error) {
                    console.error("Error fetching data: " + error);
                }
            });
        });
    </script>
}


