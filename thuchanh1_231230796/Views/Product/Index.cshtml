@{
    ViewData["Title"] = "Sản phẩm";
}
<h3 class="mb-3">Sản phẩm mới nhất</h3>
<div class="row border p-3 mb-3">
    @foreach (var prd in Model)
    {
        <div class="col-md-3 text-center">
            <img src="@prd.ImageUrl" class="img-fluid" />
            <p>@prd.Name</p>
        </div>
    }
</div>

